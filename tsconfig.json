{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build/",
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "suppressImplicitAnyIndexErrors": false,
    "target": "es5"
  },
  "include": [
    "src/package/**/*"
  ]
}